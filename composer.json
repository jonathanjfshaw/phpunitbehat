{
  "name": "jonathanjfshaw/phpunitbehat",
  "type": "library",
  "description": "Use Behat from within PHPUnit.",
  "keywords": ["phpunit", "behat", "testing"],
  "license": "MIT",
  "authors": [
    {
        "name": "Jonathan Shaw",
        "email": "jonathanjfshaw@gmail.com"
    }
  ],  
  "require": {
      "php": ">=7.0.0",
      "behat/behat": "^3.0",
      "phpunit/phpunit": ">=6.0 <8.0",
      "symfony/dependency-injection": "^3.0"
  },
  "require-dev": {
      "behat/mink": "^1.0",
  },
  "autoload": {
      "psr-4": {
          "PHPUnitBehat\\": "src"
      }
  },
  "autoload-dev": {
    "psr-4": {
        "PHPUnitBehat\\Tests\\": "tests"
    }
  }
}
