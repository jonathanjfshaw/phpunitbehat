{
  "name": "jonathanjfshaw/phpunitbehat",
  "type": "library",
  "description": "Use Behat from within PHPUnit.",
  "keywords": ["phpunit", "behat", "testing"],
  "license": "MIT",
  "authors": [
    {
        "name": "Jonathan Shaw",
        "email": "jonathanjfshaw@gmail.com"
    }
  ],  
  "require": {
      "php": "^8.2 || ^8.3",
      "phpunit/phpunit": "^9.0 || ^10 || ^11",
      "behat/behat": "^3.0.0",
      "symfony/dependency-injection": "^4.0 || ^5.0 || ^6.0 || ^7.0"
  },
  "autoload": {
      "psr-4": {
          "PHPUnitBehat\\": "src"
      }
  },
  "autoload-dev": {
    "psr-4": {
        "PHPUnitBehat\\Tests\\": "tests"
    }
  }
}
